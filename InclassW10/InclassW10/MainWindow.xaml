<Window x:Class="InclassW10.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InclassW10"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <DockPanel LastChildFill="True">
        <StackPanel x:Name="actions" Height="60" DockPanel.Dock="Top" Orientation="Horizontal" Background="Black" >
            <Button x:Name="NoneButton" Content="None" Click="NoneButton_Click" Width="50" Height="30"/>
        </StackPanel>
        <Grid>
            <Canvas x:Name="myCanvas">
            </Canvas>
            <Canvas x:Name="previewCanvas" Background="Transparent">
            </Canvas>
            <Canvas MouseLeftButtonDown="Canvas_MouseLeftButtonDown" MouseLeftButtonUp="Canvas_MouseLeftButtonUp" MouseMove="Canvas_MouseMove" MouseRightButtonDown="Canvas_MouseRightButtonDown" Background="Transparent">
                <Canvas.Resources>
                    <ContextMenu x:Key="RightClickMenu">
                        <MenuItem x:Name="DeleteMenuItem" Header="Delete" Click="DeleteMenuItem_Click"/>
                    </ContextMenu>
                </Canvas.Resources>
                <Canvas.Style>
                    <Style TargetType="{x:Type Canvas}" >
                        <Setter Property="ContextMenu" Value="{StaticResource RightClickMenu}" />
                    </Style>
                </Canvas.Style>
            </Canvas>
        </Grid>
    </DockPanel>
</Window>
